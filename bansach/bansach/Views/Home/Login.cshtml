@model bansach.DTO.AccLoginDTO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5" style="background-color:aliceblue">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "card-body cardbody-color p-lg-5" }))
                {

                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">
                    </div>

                    <div class="mb-3">
                        @Html.EditorFor(model => model.Tk, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài khoản" } })
                        @Html.ValidationMessageFor(model => model.Tk, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.EditorFor(model => model.Mk, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Mk, "", new { @class = "text-danger" })
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-success">Đăng nhập</button></div>
                    <div class="form-text text-center mb-2 text-dark">
                        @Html.ActionLink("Quên mật khẩu", "Forgetpass", "Home", new { area = "" }, new { @class = "text-dark fw-bold" })
                    </div>
                    <div class="form-text text-center mb-3 text-dark">
                        Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký", "Register", "Home", new { area = "" }, new { @class = "text-dark fw-bold" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
    {
        <script>
            var statusMessage = "@ViewBag.StatusMessage";
            if (statusMessage == "Taotkthanhcong")
            {
                swal({
                title: 'Tạo tài khoản thành công',
                        text: 'Vui lòng xác nhận mail để đăng nhập',
                        icon: 'success',
                        button: 'OK'
                    });
            }
        </script>
    }
}
