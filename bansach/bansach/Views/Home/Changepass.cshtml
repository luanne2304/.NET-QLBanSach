@model bansach.DTO.ChangePassDTO

@{
    ViewBag.Title = "Changepass";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div style="width:600px; margin:auto; padding: 0 0 80px 0;">
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">Change Password</h3>
        </div>
        <div class="card-body" style="background-color :aliceblue">
            @using (Html.BeginForm())
            {
                <div class="form-group">

                    <label class="pt-2" for="inputPasswordOld">Current Password</label>
                    <input type="password" class="form-control" id="Mkcu" name="Mkcu">
                    @Html.ValidationMessageFor(model => model.Mkcu, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="pt-4" for="inputPasswordNew">New Password</label>
                    <input type="password" class="form-control" id="Mk" name="Mk">
                    @Html.ValidationMessageFor(model => model.Mk, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="pt-4" for="inputPasswordNewVerify">Verify</label>
                    <input type="password" class="form-control" id="Mk2" name="Mk2">
                    @Html.ValidationMessageFor(model => model.Mk2, "", new { @class = "text-danger" })
                </div>
                <div class="pt-3 form-group">
                    <button type="submit" class="btn btn-success btn-lg float-right">Save</button>
                </div>
            }
            </div>
    </div>
</div>
