@model bansach.Models.User

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container rounded bg-white mt-5"  >
    <div class="row" style=" background-color:aliceblue">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5"
                     src="~/Content/assets2/images/logo/logo-2.png" width="250"><span class="font-weight-bold">LuneBT@gmail.com</span><span>Quận 6 | TP.HCM</span>
            </div>
        </div>
        <div class="col-md-8">
            <div class="p-3 py-5">
                @using (Html.BeginForm()) 
                { 
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-row align-items-center back">
                        </div>
                        <h6 class="text-right">Edit Profile</h6>
                    </div>
                <div class="row mt-3">
                    <div class="col-md-6">Tài khoản</div>
                    <div class="col-md-6">Họ tên</div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="Tài khoản" value="@Model.Tk"></div>
                    <div class="col-md-6"><input type="text" class="form-control" name="Hoten" placeholder="Họ tên" value="@Model.HoTen"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">Tiền tích lũy</div>
                    <div class="col-md-6">Thành viên</div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="Tích lũy" value="@Model.Tichluy"></div>
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="Thành viên" value="@Model.Thanhvien"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">Email</div>
                    <div class="col-md-6">Số điện thoại</div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><input type="text" class="form-control" name="Mail" placeholder="Mail" value="@Model.Mail"></div>
                    <div class="col-md-6"><input type="text" class="form-control" name="Sdt" placeholder="Số điện thoại" value="@Model.Sdt"></div>
                </div>
                <div class="mt-5 text-right"><button  class="btn btn-primary profile-button mb-5" style="float:right" type="submit">Save Profile</button></div>
                }
            </div>
        </div>
    </div>
</div>

