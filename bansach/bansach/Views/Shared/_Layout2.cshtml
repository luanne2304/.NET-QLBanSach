<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Outeli - Fashion eCommerce Bootstrap 5 Template</title>
    <meta name="robots" content="index, follow" />
    <meta name="description" content="Outeli Fashion eCommerce Bootstrap 5 Template is a stunning e-commerce website template that is the best choice for any online store.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets2/images/favicon.png">

    <!-- All CSS is here
    ============================================ -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="stylesheet" href="~/Content/assets2/css/vendor/proximanova.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/vendor/line-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/slick.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/animate.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/slinky.min.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/jquery-ui.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/easyzoom.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/select2.min.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/aos.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/plugins/nice-select.css" />
    <link rel="stylesheet" href="~/Content/assets2/css/style.css" />
    <link rel="stylesheet" href="~/Content/assetspro/csschung.css" />
    <script src="https://kit.fontawesome.com/a29daa6c0a.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="main-wrapper wrapper-2">
        <header class="header-area section-padding-lr-1 header-height-1 transparent-bar header-padding-tb sticky-bar sticky-white-bg">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-4">
                        <div class="language-wrap">
                            <ul>
                                <li><a href="#">AS</a></li>
                                <li><a href="#">VIE</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="logo text-center">
                            <a href="/Home/Index"><img src="~/Content/assets2/images/logo/logo-2.png" alt="logo"></a>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="header-action-wrap">
                            <div class="header-action-cart">
                                <a href="/Cart/Index">
                                    <img class="injectable" src="~/Content/assets2/images/icon-img/bag.svg" alt="">
                                    <span class="product-count" id="soluongtronggio">@(Session["tronggio"] == null ? 0 : Session["tronggio"])</span>
                                </a>
                            </div>
                            <div class="header-action-menu">
                                <a class="menu-active-button" href="#">
                                    <span class="info-width-1"></span>
                                    <span class="info-width-2"></span>
                                    <span class="info-width-3"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- mini cart start -->
        <!-- Menu start -->
        <div class="off-canvas-active">
            <a class="off-canvas-close"><i class="las la-times"></i></a>
            <div class="off-canvas-wrap">
                <div class="menu-wrap">
                    <div id="menu" class="slinky-mobile-menu text-left">
                        <ul>
                            <li>
                                @Html.ActionLink("Trang chủ", "Index", "Home")
                            </li>
                            <li>
                                <a href="#">Của tôi</a>
                                <ul>
                                    <li>@Html.ActionLink("Hồ sơ", "Profile", "Home")</li>
                                    <li>@Html.ActionLink("Đổi mật khẩu", "Changepass", "Home")</li>
                                    <li>@Html.ActionLink("Hóa đơn của tôi", "Hoadon", "Home")</li>
                                </ul>
                            </li>
                            <li>
                                <a href="#">SHOP</a>
                                <ul>
                                    <li><a href="shop.html">Shop Page</a></li>
                                    <li><a href="shop-collection.html">Shop Collection</a></li>
                                    <li><a href="shop-fullwidth.html">Shop Fullwidth</a></li>
                                    <li><a href="shop-instagram.html">Shop Instagram</a></li>
                                    <li><a href="product-details.html">Product Details</a></li>
                                </ul>
                            </li>
                            @if (@Session["IDrole"] != null)
                            {
                                if (@Session["IDrole"].ToString() == "2")
                                {
                                    <li>@Html.ActionLink("Shipper", "Nhandon", "Home", new { area = "Shipper" }, new { @class = "nav-link" })</li>
                                }
                                if (@Session["IDrole"].ToString() == "3")
                                {
                                    <li>@Html.ActionLink("Admin", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })</li>
                                }
                            }
                            <li>
                                @Html.ActionLink("Mã giảm", "Voucher", "Home")
                            </li>
                            <li>
                                @Html.ActionLink("Giỏ hàng", "Index", "Cart")
                            </li>
                            @if (@Session["IDuser"] == null)
                            {
                                <li>
                                    @Html.ActionLink("Đăng nhập", "Login", "Home")
                                </li>
                            }
                            else
                            {
                                <li>
                                    @Html.ActionLink("Đăng xuất", "Logout", "Home")
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="breadcrumb-area breadcrumb-padding">
            <div class="container">
                <div class="breadcrumb-content text-center">
                    <div class="breadcrumb-title" data-aos="fade-up" data-aos-delay="200">
                        <h2>Lune Bookstore</h2>
                    </div>

                </div>
            </div>
        </div>
        <div class="shop-area section-padding-lr-4 pb-235">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
        <footer class="footer-area section-padding-lr-2 bg-gray">
            <div class="container-fluid">
                <div class="footer-top section-padding-9">
                    <div class="row mb-n6">
                        <div class="col-34 mb-6">
                            <div class="footer-widget footer-logo">
                                <a href="index.html"><img src="~/Content/assets2/images/logo/logo-2.png" alt=""></a>
                            </div>
                        </div>
                        <div class="col-22-5 mb-6">
                            <div class="footer-widget footer-list">
                                <ul>
                                    <li><a href="#">Privacy Policy</a></li>
                                    <li><a href="#">Term & Conditions</a></li>
                                    <li><a href="about-us.html">About Us</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-24 mb-6">
                            <div class="footer-widget footer-list">
                                <ul>
                                    <li><a href="#">Shipping Info</a></li>
                                    <li><a href="#">Returns/Excahnges</a></li>
                                    <li><a href="contact.html">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-19-5 mb-6">
                            <div class="footer-widget footer-list">
                                <ul>
                                    <li><a href="#">kowukos@wuureco.io</a></li>
                                    <li><a href="#">(782) 629-1271</a></li>
                                </ul>
                                <div class="social-icon">
                                    <a href="#"><img class="injectable" src="~/Content/assets2/images/icon-img/facebook.svg" alt=""></a>
                                    <a href="#"><img class="injectable" src="~/Content/assets2/images/icon-img/twitter.svg" alt=""></a>
                                    <a href="#"><img class="injectable" src="~/Content/assets2/images/icon-img/instagram.svg" alt=""></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom copyright border-top-1 text-center">
                    <p>Copyright ©2021 All rights reserved | Made with <img class="injectable" src="~/Content/assets2/images/icon-img/love.svg" alt=""> by <a href="https://hasthemes.com/">HasThemes</a></p>
                </div>
            </div>
        </footer>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">×</button>
                    </div>
                    <div class="modal-body">
                        <div class="row no-gutters">
                            <div class="col-lg-5 col-md-12 col-12">
                                <div class="quickview-img">
                                    <a href="product-details.html"><img src="~/Content/assets2/images/product-details/large-1.png" alt=""></a>
                                </div>
                                <!-- Thumbnail Large Image End -->
                            </div>
                            <div class="col-lg-7 col-md-12 col-12">
                                <div class="product-details-content quickview-content">
                                    <h2>PLUSH BALLOON SLEEVE DRESS</h2>
                                    <div class="product-details-price">
                                        <span>$49.99</span>
                                    </div>
                                    <p>In elit risus, volutpat sed vestibulum sit amet, bibendum in lorem. Etiam aliquet convallis nibh at tempus. Proin gravida tincidunt egestas. Curabitur porta nibh ac enim semper.</p>
                                    <div class="product-details-quality-cart">
                                        <div class="product-quality">
                                            <input class="cart-plus-minus-box input-text qty text" name="qtybutton" value="1">
                                        </div>
                                        <div class="product-details-cart">
                                            <a href="#">Add to cart</a>
                                        </div>
                                    </div>
                                    <div class="product-details-wishlist-compare">
                                        <div class="product-details-wishlist">
                                            <a href="#">
                                                <img class="injectable" src="~/Content/assets2/images/icon-img/heart-2.svg" alt="">
                                                Add to wishlist
                                            </a>
                                        </div>
                                        <div class="product-details-compare">
                                            <a href="#">
                                                <img class="injectable" src="~/Content/assets2/images/icon-img/compare.svg" alt="">
                                                ADD TO COMPARE
                                            </a>
                                        </div>
                                    </div>
                                    <div class="product-details-meta-wrap">
                                        <div class="product-details-meta">
                                            <span>SKU: </span>
                                            <ul>
                                                <li>N/A</li>
                                            </ul>
                                        </div>
                                        <div class="product-details-meta">
                                            <span>Categories: </span>
                                            <ul>
                                                <li><a href="#">Fashion,</a></li>
                                                <li><a href="#">Under wear</a></li>
                                            </ul>
                                        </div>
                                        <div class="product-details-meta">
                                            <span>Tag: </span>
                                            <ul>
                                                <li><a href="#">Underwear,</a></li>
                                                <li><a href="#">Bikini, </a></li>
                                                <li><a href="#">Sexy, </a></li>
                                                <li><a href="#">Hot Trend</a></li>
                                            </ul>
                                        </div>
                                        <div class="product-details-meta">
                                            <span>Product ID: </span>
                                            <ul>
                                                <li>274</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal end -->
    </div>
    <!-- Global Vendor, plugins JS -->
    <script src="~/Content/assets2/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/Content/assets2/js/vendor/jquery-3.5.1.min.js"></script>
    <script src="~/Content/assets2/js/vendor/jquery-migrate-3.3.0.min.js"></script>
    <script src="~/Content/assets2/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets2/js/plugins/svg-inject.min.js"></script>
    <script src="~/Content/assets2/js/plugins/slick.js"></script>
    <script src="~/Content/assets2/js/plugins/wow.js"></script>
    <script src="~/Content/assets2/js/plugins/slinky.min.js"></script>
    <script src="~/Content/assets2/js/plugins/jquery-ui.js"></script>
    <script src="~/Content/assets2/js/plugins/jquery-ui-touch-punch.js"></script>
    <script src="~/Content/assets2/js/plugins/countdown.js"></script>
    <script src="~/Content/assets2/js/plugins/magnific-popup.js"></script>
    <script src="~/Content/assets2/js/plugins/easyzoom.js"></script>
    <script src="~/Content/assets2/js/plugins/scrollup.js"></script>
    <script src="~/Content/assets2/js/plugins/aos.js"></script>
    <script src="~/Content/assets2/js/plugins/select2.min.js"></script>
    <script src="~/Content/assets2/js/plugins/jquery.nice-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Main JS -->
    <script src="~/Content/assets2/js/main.js"></script>
    <script src="~/Content/assetspro/jschung.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>